                  //- td=item['remainedPacket']
                  td=item['totalQuantity']
                  //- td="$ "+item['camePrice']
                  td="$ "+item['sellPriceMufrad']
                  td="$ "+item['totalPrice']
                  //- td=item['expireDate']
                  //- td=item['trailerNumber']
