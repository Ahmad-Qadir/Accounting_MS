        .row
            table.table.table-hover.table-sm.dt-responsive.table-striped
                thead.thead-light
                    tr(scope='col' style="text-align:center; font-size:90%")
                        th #
                        th ژمارەی تۆمار
                        th بەروار
                        th قەرزی کۆن
                        th قەرزی نوێ
                        th چالاکی
                        th کۆی گشتی

                tbody
                    each item,i in invoices
                        tr(scope='col' style="text-align:center; font-size:90%")
                            td=i
                            td(style="text-align:center;")=item['_id']['recordCode']
                            td(style=`text-align:center;`)=item['items'][0]['createdAt'].toLocaleString()
                            td(style=`text-align:center;`)="$ "+item['items'][0]['oldDebut']
                            td(style="text-align:center;")="$ "+item['amount']
                            if item['items'][0]['moneyStatus']=="Return Money"
                                td(style="text-align:center;") پارەدان
                            else if item['items'][0]['status']=="Recovered"
                                td(style="text-align:center;") گەڕانەوە
                            else if item['items'][0]['moneyStatus']=="Debut"
                                td(style="text-align:center;") فرۆشتن-قەرد
                            else if item['items'][0]['moneyStatus']=="Paid"
                                td(style="text-align:center;") فرۆشتن-کاش
                            if item['items'][0]['moneyStatus']=="Return Money"
                                td(style="text-align:center;")="$ "+(item['items'][0]['oldDebut']-item['amount'])
                            else 
                                td(style="text-align:center;")="$ "+(item['items'][0]['oldDebut']+item['amount'])