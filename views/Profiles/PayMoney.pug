include ../Components/Header
block content
    br
    .container
        // Page Heading
        .d-sm-flex.align-items-left.justify-content-between.mb-4
        .jumbotron
            .row
                .container-fluid.table-responsive
                    form(method='POST' action="/Profiles/Debut/"+profiles['_id']+"/Updates")
                        h2="نوێکردنەوەی زانیاریەکانی "+profiles['clientName']
                        .row
                            .form-group.col-md-2
                                label قەرزی کۆن
                                input.form-control(id="olddebut" name="olddebut" type='number' placeholder='0' required step='any' value=profiles['remainedbalance'])
                            .form-group.col-md-2
                                label کۆی گشتی
                                input.form-control(id="paid" name="paid" type='number' placeholder='0' required step='any')
                            .form-group.col-md-2
                                label بڕی دراو
                                input.form-control(id="prepaid" name="prepaid" type='number' placeholder='0' required step='any')
                            .form-group.col-md-2
                                label کۆی گشتی داشکان
                                input.form-control(id="discount" name="discount" type='text' placeholder='0' required step='any' readOnly)
                            .form-group.col-md-2
                                label قەرزی ماوە
                                input.form-control(id="finalbalance" name="finalbalance" readOnly type='number' value=profiles['remainedbalance'])
                            .form-group.col-md-1.mt-4
                                button.btn.btn-primary(type='submit') تۆمارکردن
    script.
        $(document).ready(function(){
            // Check For Packets
            $( "#paid" ).change(function() {
                document.getElementById('finalbalance').value=parseFloat(document.getElementById('olddebut').value)-parseFloat(document.getElementById('paid').value)
            });
            $( "#prepaid" ).change(function() {
                var calculation=parseFloat(document.getElementById('paid').value)-parseFloat(document.getElementById('prepaid').value)
                var x=calculation/parseFloat(document.getElementById('paid').value);
                var y=x*100;
                document.getElementById('discount').value="% "+y;
            });
        });
