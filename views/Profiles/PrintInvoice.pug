                          td.right
                            strong(id="finalPrice")="$"+(records[0]['totalPrice'])
              else 
                .row
                  .col-5.ml-auto
                    br
                    table.table.table-bordered.table-xs(id="totalPayment")
                      tbody
                        tr(style="line-height: 10px;")
